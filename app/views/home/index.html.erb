<% manufacturers = Manufacturer.all %>

<form action="/models" method="GET">
  <p>
    <label>Escolha a Fabricante:</label>
    <select name="webmotors_manufacturer_id">
      <% manufacturers.each do |manufacturer| %>
        <option value="<%= manufacturer.webmotors_id %>"><%= manufacturer.name %></option>
      <% end %>
    </select>
  </p>

  <input type="submit" value="Buscar modelos">
</form>
